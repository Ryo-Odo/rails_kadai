<h1>つぶやき一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @chunters.each do |chunter| %>
  <tr>
    <td><%= chunter.content %></td>
    <!-- <td><%= link_to '編集する', chunter_path(chunter.id) %></td> -->
    <td><%= link_to "つぶやきを編集する", edit_chunter_path(chunter.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', chunter_path(chunter.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'つぶやきを投稿する', new_chunter_path %>
